{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "rootDir": ".",
    "declaration": true,
    "baseUrl": ".",
    "paths": {
      "./lib/*": ["./lib/*"]
    }
  },
  "include": ["*.ts", "lib/*.ts"],
  "exclude": ["node_modules", "dist"]
}
