# StockENT Monitoring Configuration
# Copy this file to .env and configure your monitoring settings

# =============================================================================
# ALERTING CONFIGURATION
# =============================================================================

# Email Alerts
ALERT_EMAIL_ENABLED=true
ALERT_EMAIL_RECIPIENTS=admin@stockent.com,alerts@stockent.com
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=alerts@stockent.com

# Slack Alerts
SLACK_ALERTS_ENABLED=true
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# =============================================================================
# REPORTING CONFIGURATION
# =============================================================================

# Daily Reports
DAILY_REPORTS_ENABLED=true
DAILY_REPORT_RECIPIENTS=admin@stockent.com,reports@stockent.com

# Weekly Reports
WEEKLY_REPORTS_ENABLED=true
WEEKLY_REPORT_RECIPIENTS=admin@stockent.com,management@stockent.com

# Monthly Reports
MONTHLY_REPORTS_ENABLED=true
MONTHLY_REPORT_RECIPIENTS=admin@stockent.com,management@stockent.com,ceo@stockent.com

# =============================================================================
# MONITORING THRESHOLDS
# =============================================================================

# Health Check Intervals (in milliseconds)
HEALTH_CHECK_INTERVAL=300000
HEALTH_CHECK_TIMEOUT=30000
HEALTH_CHECK_RETRIES=3

# Performance Thresholds
SLOW_QUERY_THRESHOLD=1000
SLOW_API_THRESHOLD=2000
HIGH_MEMORY_THRESHOLD=90
HIGH_CPU_THRESHOLD=80

# Data Quality Thresholds
DUPLICATE_PRODUCTS_THRESHOLD=5
PRODUCTS_WITHOUT_IMAGES_THRESHOLD=20
INCOMPLETE_PROFILES_THRESHOLD=100
INVALID_PRICES_THRESHOLD=0
ORPHANED_RECORDS_THRESHOLD=10

# Textile Marketplace Thresholds
INVENTORY_SYNC_THRESHOLD=10
SUSPICIOUS_PRICE_THRESHOLD=0.01
HIGH_PRICE_THRESHOLD=100000
MAX_IMAGES_PER_PRODUCT=20
REQUIRED_IMAGES=1
STALE_CONVERSATION_THRESHOLD=7
MAX_MESSAGES_PER_CONVERSATION=100

# =============================================================================
# SECURITY MONITORING
# =============================================================================

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# IP Filtering
IP_WHITELIST=127.0.0.1,::1
IP_BLACKLIST=

# =============================================================================
# DATABASE MONITORING
# =============================================================================

# Connection Pool Settings
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_POOL_IDLE=10000
DB_POOL_ACQUIRE=30000
DB_POOL_EVICT=1000

# Query Monitoring
DB_SLOW_QUERY_THRESHOLD=1000
DB_CONNECTION_TIMEOUT=30000
DB_QUERY_TIMEOUT=60000

# =============================================================================
# CACHE MONITORING
# =============================================================================

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_RETRY_DELAY=100
REDIS_MAX_RETRIES=3

# Cache TTL (in seconds)
CACHE_TTL_DEFAULT=3600
CACHE_TTL_USER=1800
CACHE_TTL_PRODUCT=7200
CACHE_TTL_CATEGORY=86400

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log Levels: error, warn, info, debug
LOG_LEVEL=info
LOG_FORMAT=combined

# File Logging
LOG_FILE_ENABLED=true
LOG_FILE_FILENAME=logs/monitoring.log
LOG_FILE_MAX_SIZE=10m
LOG_FILE_MAX_FILES=5

# Console Logging
LOG_CONSOLE_ENABLED=true

# =============================================================================
# MONITORING DASHBOARD
# =============================================================================

# Dashboard Access
DASHBOARD_ENABLED=true
DASHBOARD_AUTH_REQUIRED=true
DASHBOARD_ADMIN_ONLY=true

# =============================================================================
# EXTERNAL INTEGRATIONS
# =============================================================================

# New Relic (if using)
NEW_RELIC_LICENSE_KEY=
NEW_RELIC_APP_NAME=StockENT

# DataDog (if using)
DATADOG_API_KEY=
DATADOG_APP_KEY=

# Sentry (if using)
SENTRY_DSN=

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Development Mode
MONITORING_DEV_MODE=false
MONITORING_VERBOSE_LOGGING=false
MONITORING_TEST_MODE=false

# Mock External Services
MOCK_EMAIL_SERVICE=false
MOCK_SLACK_SERVICE=false
MOCK_REDIS_SERVICE=false

# =============================================================================
# PRODUCTION SETTINGS
# =============================================================================

# Production Optimizations
MONITORING_PRODUCTION_MODE=true
MONITORING_COMPRESS_LOGS=true
MONITORING_ROTATE_LOGS=true

# High Availability
MONITORING_HA_ENABLED=false
MONITORING_HA_PRIMARY=true
MONITORING_HA_SECONDARY=false

# =============================================================================
# BACKUP AND RECOVERY
# =============================================================================

# Monitoring Data Backup
MONITORING_BACKUP_ENABLED=true
MONITORING_BACKUP_INTERVAL=86400
MONITORING_BACKUP_RETENTION=30

# Disaster Recovery
MONITORING_DR_ENABLED=false
MONITORING_DR_PRIMARY_URL=
MONITORING_DR_SECONDARY_URL=